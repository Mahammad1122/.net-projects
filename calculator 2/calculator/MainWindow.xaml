        <Button Content="-" Height="55" HorizontalAlignment="Center" Margin="218,304,14,134" Name="btnsub" VerticalAlignment="Center" Width="65" Click="btnsub_Click" Background="#FF2B2B2B" BorderBrush="{x:Null}" Foreground="#FF33646C" FontSize="22" FontFamily="Microsoft Sans Serif" FlowDirection="LeftToRight" Padding="0" FontWeight="Bold" FontStyle="Normal" />
