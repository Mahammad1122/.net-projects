                    <GradientStop Color="#FF343434" Offset="0.981" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <Button Background="#FF2B2B2B" BorderBrush="{x:Null}" Content="CLEAR" FlowDirection="LeftToRight" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="White" Height="55" HorizontalAlignment="Center" Margin="9,181,153,257" Name="clearbtn" VerticalAlignment="Center" Width="136" Click="clearbtn_Click" ClickMode="Release" FontWeight="Bold" FontStyle="Normal" />
