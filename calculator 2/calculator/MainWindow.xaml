        <Button Background="#FF343434" BorderBrush="#FF343434" Content="." FlowDirection="LeftToRight" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="White" Height="55" HorizontalAlignment="Center" Margin="149,424,84,14" Name="btnpoint" Padding="0" VerticalAlignment="Center" Width="65" Click="btnpoint_Click" FontWeight="Bold" FontStyle="Normal" />
    </Grid>
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="Black" Offset="0" />
