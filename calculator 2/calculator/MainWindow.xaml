        <Button Content="9" Height="55" HorizontalAlignment="Center" Margin="150,242,84,196" Name="btn9" VerticalAlignment="Center" Width="65" Click="btn9_Click" Background="#FF343434" BorderBrush="#FF343434" Foreground="White" FontSize="18" FontFamily="Microsoft Sans Serif" FlowDirection="LeftToRight" Padding="0" FontWeight="Bold" FontStyle="Normal" />
        <Button Content="/" Height="55" HorizontalAlignment="Center" Margin="218,181,14,257" Name="btndiv" VerticalAlignment="Center" Width="65" Click="btndiv_Click" Background="#FF2B2B2B" BorderBrush="{x:Null}" Foreground="#FF33646C" FontSize="22" FontFamily="Microsoft Sans Serif" FlowDirection="LeftToRight" Padding="0" FontWeight="Bold" FontStyle="Normal" />
