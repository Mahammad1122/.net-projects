        <Button Content="x" Height="55" HorizontalAlignment="Center" Margin="218,243,14,195" Name="btnmul" VerticalAlignment="Center" Width="65" Click="btnmul_Click" Background="#FF2B2B2B" BorderBrush="{x:Null}" Foreground="#FF33646C" FontSize="22" FontFamily="Microsoft Sans Serif" FlowDirection="LeftToRight" Padding="0" FontWeight="Bold" FontStyle="Normal" />
        <Button Content="1" Height="55" HorizontalAlignment="Center" Margin="9,364,224,74" Name="btn1" VerticalAlignment="Center" Width="65" Click="btn1_Click" Background="#FF343434" BorderBrush="#FF343434" Foreground="White" FontSize="18" FontFamily="Microsoft Sans Serif" FlowDirection="LeftToRight" Padding="0" FontWeight="Bold" FontStyle="Normal" />
